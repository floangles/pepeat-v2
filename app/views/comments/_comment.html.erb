<% @meal.comments.order('created_at DESC').each do |comment| %>
  <div class="comment-card">
    <div class="row row-eq-height">
      <div class="col-xs-3">
         <% if comment.user.id == comment.meal.user.id %>
          <%= image_tag comment.user.picture.url(:medium), class: "img-circle comment-card-pic hvr-fadeIn hvr-grow current-chat" %>
         <% else %>
          <%= image_tag comment.user.picture.url(:medium), class: "img-circle comment-card-pic hvr-fadeIn hvr-grow" %>
         <% end %>
         <span class= 'comment-card-name'><b><%= comment.user.firstname%></b></span>
        <span class= "comment-card-date"><i> <%= l(comment.created_at, format:'%d/%m/%Y')%></i></span>
      </div>
      <div class="col-xs-9">
        <div class= "comment-card-comm vcenter">
          <p><%= comment.commenter%></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
