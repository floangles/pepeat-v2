            <div class= "password-card-input">
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>

            <div class= "password-card-send">
              <%= f.submit "RÃ©initialiser", class: "btn btn-pepeat" %>
            </div>
          <% end %>

