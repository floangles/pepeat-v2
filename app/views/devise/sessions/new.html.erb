<div class="background">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="card-signin text-center">
          <div class= "text-center">
            <%= image_tag 'pepeat-title', class: "pepeat-signup" %>
            <h3>Connexion</h3>
          </div>
          <div class="row">
            <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <%= f.input :email, label: 'mail', required: false, autofocus: true %>
                  <%= f.input :password, required: false %>
                  <div class= "text-center">
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <div class= "text-center">
                    <%= f.button :submit, t(".sign_in", default: "Se connecter"), class: "btn btn-pepeat" %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class= "links text-center">
              <%= render "devise/shared/links" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
