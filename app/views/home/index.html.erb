<div class= "banner-video">
  <div class="homepage-hero-module">
    <div class="video-container">
      <div class="filter"></div>
        <video autoplay loop class="fillWidth">
          <source src="<%=video_path("cover/cover.mp4")%>" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
        </video>
      <div class="poster hidden">
        <img src="<%=video_path("cover/cover.jpg")%>" alt="Plats maisons à emporter">
      </div>
      <div class="banner-content text-center">
      <%= image_tag 'pepeat-title', class: "size-pepeat" %>
      <h2>La cuisine de vos voisins dans votre assiette, en un clic !</h2>
      </div>
      <% if current_user && current_user.chief %>
        <div class= "banner-soon">
          <%= image_tag 'cuisinier.png'%>
        </div>
      <% else %>
        <div class= "banner-soon">
          <%= image_tag 'vendre.png'%>
        </div>
      <% end %>
      <div class= "signup-home">
        <% if current_user && !current_user.chief %>
          <%= link_to "Devenir Pepeato", page_path('chief_infos'), class: 'btn-lg btn-success2 hvr-grow' %>
        <% elsif current_user && current_user.chief %>
          <%= link_to "Créer un menu", new_profile_meal_path, class: 'btn-lg btn-success2 hvr-grow' %>
        <% else %>
          <%= link_to "Créer un compte", new_user_registration_path, class: 'btn-lg btn-success2 hvr-grow' %>
        <% end %>
      </div>
      <div class= "banner-button">
        <%= link_to 'Voir les menus', meals_path, class: "btn-lg btn-pepeat2 hvr-grow", id:"banner-action" %>
      </div>
      <!-- <div class="countdown text-center">
        <span>Passez votre 1ère commande dans</span>
        <div id="countdown"> <span>Jour</span></div>
      </div> -->
    </div>
  </div>
</div>

