<h1> c'est parti !!!!</h1>

<%= simple_form_for(current_user, url: update_bank_account_profile_path, id: "payment-form") do |f| %>
  <input data-stripe= "account-number"/>
  <%= f.submit "Enregistrement du compte",  class: "btn" %>
<% end %>



<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

<% content_for(:after_js) do %>

<script type="text/javascript">

  function stripeResponseHandler(status, response) {
      var $form = $('#payment-form');

      if (response.error) {
        // Show the errors on the form
        $form.find('.bank-errors').text(response.error.message);
        $form.find('button').prop('disabled', false);
      } else {
        // response contains id and bank_account, which contains additional bank account details
        var token = response.id;
        // Insert the token into the form so it gets submitted to the server
        $form.append($('<input type="hidden" name="stripeToken" />').val(token));
        // and submit
        $form.get(0).submit();
      }
    }


      jQuery(function($) {
       $('#payment-form').submit(function(e) {
         var $form = $(this);

         // Disable the submit button to prevent repeated clicks
         $form.find('button').prop('disabled', true);

         Stripe.bankAccount.createToken($form, stripeResponseHandler);

         // Prevent the form from submitting with the default action
         return false;
       });
     });

</script>

<% end %>

