<div class="background-profile-show">
  <div class="background-profile-show-title">
    <h3>Edition du profil</h3>
  </div>
</div>
<%= simple_form_for(@user, url: profile_path, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <% if current_user.chief? %>
    <div class="container">
      <div class="chief-profile">
        <div class="row">
          <div class="col-xs-6">
            <div class="chief-profile-left text-center">
              <h3>Votre photo de chef Pepeat</h3>
              <%= image_tag 'picture-chief.png', class: "chief-profile-left-picture", id:"placeholder-chief" %>
              <div id="picturechief"></div>

            <!-- create chiefpicture hidden form -->

            <div class="hidden-form">
              <%= f.file_field :picture, id: "profilepictureInput"%>
            </div>

              <!-- create chiefpicture hidden form -->

            </div>
          </div>
          <div class="col-xs-2 col-xs-offset-1">
            <div class="chief-profile-right text-center">
              <%= f.input :surname, label: 'Votre nom de cuisinier',required: false %>
              <%= f.input :firstname, label: 'Votre prénom', required: false %>
              <%= f.input :lastname, label: 'Votre nom de famille', required: false %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <%= f.input :description, input_html: { class: 'wysihtml5' } %>
        </div>
      </div>
    </div>

    <h3 class= "text-center title"> Infos </h3>
    <div class="container">
      <div class="chief-infos text-center">
        <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
            <%= f.input :address, label: 'Votre adresse',required: false %>
            <%= f.input :phone_number, label: 'Numéro de téléphone' %>
          </div>
        </div>
      </div>
    </div>

    <h3 class= "text-center title"> Votre cuisine </h3>
    <div class="container">
      <div class="chief-kitchen text-center">
        <div class="row">
          <div class= "picture-kitchen">
            <div id="target11"></div>
            <div class="col-xs-3">
              <%= image_tag 'placeholder.png', id: "placeholder-kitchen", class: "kitchen-size" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="hidden-form">
      <%= file_field_tag "chiefpictures[]", type: :file, multiple: true,  id: "kitchenpictureInput" %>
    </div>

    <div class= "text-center">
      <em><strong><%= f.button :submit, "Je valide mon profil!", class: "btn-lg btn-pepeat" %>
    </div>
  <% else %>
    <div class="container">
      <div class="chief-profile">
        <div class="row">
          <div class="col-xs-6">
            <div class="chief-profile-left text-center">
              <h3>votre photo de profil</h3>
              <%= image_tag 'picture-chief.png', class: "chief-profile-left-picture", id:"placeholder-chief" %>
              <div id="picturechief"></div>

            <!-- create chiefpicture hidden form -->

            <div class="hidden-form">
              <%= f.file_field :picture, id: "profilepictureInput"%>
            </div>

              <!-- create chiefpicture hidden form -->

            </div>
          </div>
          <div class="col-xs-2 col-xs-offset-1">
            <div class="chief-profile-right text-center">
              <%= f.input :firstname, label: 'Votre prénom', required: false %>
              <%= f.input :lastname, label: 'Votre nom de famille', required: false %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <h3 class= "text-center title"> Infos </h3>
    <div class="container">
      <div class="chief-infos text-center">
        <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
            <%= f.input :phone_number, label: 'Numéro de téléphone', required: false %>
          </div>
        </div>
      </div>
    </div>
    <div class= "text-center">
      <em><strong><%= f.button :submit, "Je valide mon profil!", class: "btn-lg btn-pepeat" %>
    </div>
  <% end %>
<% end %>



