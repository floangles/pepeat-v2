        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="share-body-card">
          <div class="share-body-card-header">
            <%= link_to 'http://ouishare.net/fr',:target => "_blank" do %>
              <%= image_tag 'ouishare-right' %>
            <% end %>
