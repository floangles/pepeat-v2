

<% if notice %>
    <div class="home-alert">
      <div class="alert alert-info alert-dismissible slideDown fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert", role:"button", aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    </div>
  <% end %>
  <% if alert %>
    <div class="home-alert">
      <div class="alert alert-warning alert-dismissible slideDown fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    </div>
  <% end %>

