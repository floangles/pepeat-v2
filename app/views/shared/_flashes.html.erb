
<% if request.original_url == "http://localhost:3000/" || request.original_url == 'https://pepeat-v2-production.herokuapp.com/' %>

  <% if notice %>
    <div class="home-alert">
      <div class="alert alert-info alert-dismissible slideDown fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert", role:"button", aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    </div>
  <% end %>
  <% if alert %>
    <div class="home-alert">
      <div class="alert alert-warning alert-dismissible slideDown fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    </div>
  <% end %>


<% else %>

  <% if notice %>
    <div class="alert alert-info alert-dismissible slideDown fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert", role:"button", aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-warning alert-dismissible slideDown fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= alert %>
    </div>
  <% end %>


<% end %>
