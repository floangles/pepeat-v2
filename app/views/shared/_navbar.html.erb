  <nav class="navbar navbar-default navbar-fixed-top navbar-wagon2 navbar-absolute" role="navigation">
<% else %>
 <nav class="navbar navbar-default navbar-fixed-top navbar-wagon navbar-absolute" role="navigation">
<% end %>
