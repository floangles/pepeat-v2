                <% end %>
              </li>
            </ul>
          </li>
          <li>
            <%= link_to t(".top_call_to_action", default: "Voir les menus"), meals_path, class: "btn2", id: 'navbar-action' %>
          </li>
          <li>
            <% if current_user.chief? %>
              <%= link_to t(".top_call_to_action", default: " Créer un menu"), new_profile_meal_path, class: "btn", id: 'create-menu' %>
