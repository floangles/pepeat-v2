              </li>
            </ul>
          </li>
          <% if current_user.chief? %>
            <li class= "dropdown">
               <%= link_to "#", {class: "dropdown-toggle", "data-toggle" => "dropdown", "role" => "button", "aria-expanded" => "false"} do %>
                <i class="fa fa-cutlery"></i> Cuisine <span class="caret"></span>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to profile_meals_path do %>
                    Mes annonces
                  <% end %>
                </li>
                <li>
                  <%= link_to history_profile_meals_path do %>
                    Mon historique
                  <% end %>
                </li>
              </ul>
            </li>
          <% end %>
          <li class= "dropdown">
             <%= link_to "#", {class: "dropdown-toggle", "data-toggle" => "dropdown", "role" => "button", "aria-expanded" => "false"} do %>
              <i class="fa fa-shopping-cart"></i> Réservations <span class="caret"></span>
