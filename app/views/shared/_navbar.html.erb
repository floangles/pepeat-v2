

<% if request.original_url == "http://localhost:3000/" || request.original_url == 'https://pepeat-v2-production.herokuapp.com/' %>
  <nav class="navbar navbar-default navbar-fixed-top navbar-wagon navbar-absolute" role="navigation">
<% else %>
  <nav class="navbar navbar-default navbar-wagon" role="navigation">
<% end %>
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      <a class="navbar-brand" href="/">
        <%= image_tag "logo.png" %>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", "data-toggle" => "dropdown", "role" => "button", "aria-expanded" => "false"} do %>
                <%= image_tag current_user.picture.url(:thumb), class: "img-avatar" %>
              Profil <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to profile_path do %>
                  <%= t ".profile", default: "Profil" %>
                <% end %>
              </li>
              <% if current_user.chief? %>
                <li>
                  <%= link_to rating_profile_path do %>
                    Vos avis
                  <% end %>
                </li>
              <% end %>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Déconnection" %>
                <% end %>
              </li>
            </ul>
          </li>
          <% if current_user.chief? %>
            <li class= "dropdown">
               <%= link_to "#", {class: "dropdown-toggle", "data-toggle" => "dropdown", "role" => "button", "aria-expanded" => "false"} do %>
                Cuisine <span class="caret"></span> <span class="badge">2</span>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to profile_meals_path do %>
                    Annonces
                  <% end %>
                </li>
                <li>
                  <%= link_to  history_profile_meals_path do %>
                    Historique
                  <% end %>
                </li>
              </ul>
            </li>
          <% end %>
          <li class= "dropdown">
             <%= link_to "#", {class: "dropdown-toggle", "data-toggle" => "dropdown", "role" => "button", "aria-expanded" => "false"} do %>
              Vos réservations <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to profile_orders_path do %>
                  En cours
                <% end %>
              </li>
              <li>
                <%= link_to history_profile_orders_path do %>
                  Historique
                <% end %>
              </li>
            </ul>
          </li>
          <li>
            <% if current_user.chief? %>
              <%= link_to t(".top_call_to_action", default: "Créer un plat"), new_profile_meal_path, class: "btn" %>
            <% else %>
              <%= link_to t(".top_call_to_action", default: "Devenir chef Pepeat"), page_path('chief_infos'), class: "btn" %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to t(".sign_up", default: "S'inscrire"), new_user_registration_path %>
          </li>
          <li>
            <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path %>
          </li>
          <li>
            <%= link_to t(".top_call_to_action", default: "Devenir chef Pepeat"), page_path('chief_infos'), class: "btn" %>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
