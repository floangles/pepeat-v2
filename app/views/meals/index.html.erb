    <h3>Les cuisiniers de Lille</h3>
  </div>
  <div class="text-center">
    <% @users.each do |user|  %>
      <% if user.chief?%>
        <%= link_to publics_path(user) do %>
          <%= image_tag user.picture.url(:medium), class: "cook-picture img-circle" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

