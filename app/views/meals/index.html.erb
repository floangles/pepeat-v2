<div class= "chief-banner text-center">
  <h3>Les chefs du quartier vieux Lille</h3>
  <% @users.each do |user|  %>
    <%= image_tag user.picture.url(:medium), class: "cook-picture img-circle" %>
  <% end %>
</div>


<div class= "week-day">
  <ul class= "list-inline text-center">
    <li><h4>Lundi</h4></li>
    <li><h4>Mardi</h4></li>
    <li><h4>Mercredi</h4></li>
    <li><h4>jeudi</h4></li>
    <li><h4>Vendredi</h4></li>
    <li><h4>Samedi</h4></li>
    <li><h4>Dimanche</h4></li>
  </ul>
</div>


<div class="container">
  <% @meals.each do |meal|%>
    <div class="row">
      <div class="col-xs-12 col-sm-8">
        <div class="card-meal">
          <div class="card-meal-header text-center">
            <%=image_tag meal.user.picture.url(:medium), class: "card-meal-header-img img-circle" %>
            Chef
            <%= meal.user.firstname %>
            <%= meal.user.lastname %>
          </div>
          <div class="card-meal-body">
            <div class= "card-meal-body-menu">
              <%= image_tag 'starter', class: "card-meal-body-menu-icon" %>
              <%= meal.starter %>
            </div>
            <div class= "card-meal-body-menu">
              <%= image_tag 'main', class: "card-meal-body-menu-icon" %>
              <%= meal.main %>
            </div>
            <div class= "card-meal-body-menu">
              <%= image_tag 'dessert', class: "card-meal-body-menu-icon" %>
              <%= meal.dessert %>
            </div>
          </div>
          <div class="card-meal-body-map">
            <div id="map" style="width: 100%; height: 100%;"></div>
          </div>
          <div class="card-meal-footer text-center">
            <ul class= "list-inline">
              <li> <%= meal.price %> €</li>
              <li> <%= meal.day.strftime('%d/%m/%Y') %></li>
              <li><%= meal.start_hour.strftime('De %Hh') %></li>
              <li><%= meal.end_hour.strftime('à %Hh') %></li>
              <li><%= meal.portion %>
                <%= image_tag 'portion', class: "card-meal-footer-icon" %>
              </li>
              <li>
                <%= render "modale", meal: meal %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= render 'carousel', meal: meal %>
      </div>
    </div>
  <% end %>
</div>








<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(15);
      });
    })
  <% end %>
<% end %>


