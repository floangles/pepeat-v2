<div class= "chief-banner text-center">
  <h3>Les chefs du quartier vieux Lille</h3>
  <% @users.each do |user|  %>
    <%= image_tag user.picture.url(:medium), class: "cook-picture img-circle" %>
  <% end %>
</div>


<div class= "week-day">
  <ul class= "list-inline text-center">
    <li><h4>Lundi</h4></li>
    <li><h4>Mardi</h4></li>
    <li><h4>Mercredi</h4></li>
    <li><h4>jeudi</h4></li>
    <li><h4>Vendredi</h4></li>
    <li><h4>Samedi</h4></li>
    <li><h4>Dimanche</h4></li>
  </ul>
</div>


<div class="container">
  <div class="row">
    <% @meals.each do |meal| %>
      <div class="col-xs-6">
     <%= render "cardmeals", meal: meal %>
      </div>
    <% end %>
  </div>
</div>



