    <div role="tabpanel" class="tab-pane in active " id="0">
      <div class="container">
        <div class="row">
          <% @meals.each do |meal| %>
            <% if meal.validation? && meal_actual(meal) && total_meals(@meals) > 0 %>
              <div class="col-xs-12 col-sm-6">
                <%= render "/shared/cardmeals", meal: meal %>
              </div>
            <% else %>
              <div class= "not-found text-center">
                <h1>Il n'y a pas de menus proposés actuelement. </h1>
                <%= image_tag 'not_found.png', class: "not-found-img" %>
