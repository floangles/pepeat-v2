<div class="background-profile-show background-banner">
  <div class="overlay">
    <div class="background-profile-show-title text-center">
      <h3>Les photos de votre menu</h3>
      </div>
    </div>
  </div>
</div>



<%= simple_form_for @picture, url: profile_meal_picture_path(@picture, meal_id: params[:meal_id]) do |f| %>
  <div class="container">
    <div class="crop-tool">
      <h1 class= "text-center profile-header">Je redimensionne ma photo</h1>
      <p class= "text-center">Il est <b>tr√®s important</b> que vous utilisiez cet outil. Si votre photo ne respecte pas les normes de tailles de Pepeat nous ne pourrons pas valider votre menu. </p>
      <div class="row">
        <div class="col-xs-8">
          <div class= "crop-tool-picture">
            <%= f.cropbox :picture, :width => 680 %>
          </div>
        </div>
        <div class="col-xs-4">
          <div class= "crop-tool-preview text-center">
            <h3 class= "text-center">Photo telle qu'elle apparaitra sur Pepeat</h3>
            <%= f.crop_preview :picture, :width => 300 %>
            <div class= "text-center crop-tool-button">
              <%= f.button :submit, "Ma photo est belle", class: "btn-lg btn-pepeat" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


