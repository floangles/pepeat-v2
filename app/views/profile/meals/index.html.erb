<% if @meals.count == 0 %>
  <div class="background-default window-height">
    <div class= "background-default-blur">
      <div class="background-default-blur-text">
        <h3 class= "text-center">Vous n'avez pas de menu en cours</h3>
      </div>
      <div class="background-default-blur-edit">
        <%= link_to 'Créer un menu', new_profile_meal_path, class: "btn btn-pepeat btn-large" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="background-profile-meals background-banner">
    <div class= "overlay">
    <div class="background-profile-meals-title text-center">
      <h3>Vos annonces en cours</h3>
    </div>
    <div class= "background-profile-meals-add hover" title= "Créer un nouveau menu">
      <%= link_to new_profile_meal_path do %>
      <button class="button button-glow button-circle button-action button-jumbo">
        <i class="fa fa-plus"></i>
      </button>
      <% end %>
    </div>
     </div>
  </div>
  <% @meals.each do |meal| %>
    <% if meal_actual(meal) %>
      <div class="container">
        <div class="card-offer">
          <div class="row">
            <% if meal.validation? %>
              <div class="card-offer-header text-center">
                <h3 class= "hover" title= "Votre menu a été validé et est désormais en ligne.">Votre menu est en ligne</h3>
              </div>
            <% else %>
              <div class="card-offer-header2 text-center">
                <h3 class= "hover" title= "Votre menu est en cours de validation. Nous vous contacterons sous peu">votre menu est en cours de validation</h3>
              </div>
            <% end %>
            <div class="col-xs-12 col-sm-6">
              <div class="card-offer-left">
                <div class="card-offer-left-title text-center">
                  <%= meal.title%> - <%=meal.price%> €
                </div>
                <% if meal.starter? %>
                  <div class="card-offer-left-meal">
                      <%= image_tag 'starter.png', class: "card-offer-left-meal-icon"%>
                    <div class="card-offer-left-meal-name">
                      <%= meal.starter %>
                    </div>
                  </div>
                <% end %>
                <% if meal.main? %>
                  <div class="card-offer-left-meal">
                    <%= image_tag 'main.png', class: "card-offer-left-meal-icon"%>
                    <div class="card-offer-left-meal-name">
                      <%= meal.main %>
                    </div>
                  </div>
                <% end %>
                <% if meal.dessert %>
                  <div class="card-offer-left-meal">
                    <%= image_tag 'dessert.png', class: "card-offer-left-meal-icon"%>
                    <div class="card-offer-left-meal-name">
                      <%= meal.dessert %>
                    </div>
                  </div>
                <% end %>
                <div class="card-offer-left-announce text-center">
                  <%= link_to meal_path(meal) do %>
                    <button class="btn btn-pepeat2 hvr-grow">
                    <i class="fa fa-eye"></i>
                    </button>
                  <% end %>
                  <% if meal.orders.where(state: "paid").count == 0 %>
                    <%= link_to edit_profile_meal_path(meal) do %>
                      <button class="btn btn-success2 hvr-grow">
                      <i class="fa fa-pencil"></i>
                      </button>
                    <% end %>
                  <% else %>
                    <span class= "hover" title= "Vous ne pouvez pas modifier un menu lorsque vous avez des réservations">
                      <button class="btn btn-success2 hvr-grow">
                      <i class="fa fa-pencil"></i>
                      </button>
                    </span>
                  <% end %>
                  <%= link_to profile_meal_path(meal),
                    method: :delete,
                    data: { confirm: "Etes vous certain de vouloir supprimer votre menu ?" } do %>
                    <button class="btn btn-danger2 hvr-grow">
                      <span class= "hover" title= "Supprimer votre menu. Cette action est irréversible. Les personnes ayant commandés seront prévenues par mail">
                        <i class="fa fa-trash"></i>
                      </span>
                    </button>
                  <% end %>
                  <%= link_to 'Changer les photos', mealpic_profile_meals_path(meal_id: meal.id), class: "btn btn-primary2" %>
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-sm-6">
              <div class="card-offer-right">
                <div class="card-offer-right-title text-center">
                  Infos
                </div>
                <div class="card-offer-right-date">
                <% if meal.home? %>
                   <%= image_tag 'home2.png', class: "card-offer-right-date-img hover", title: "Sur place" %>
                  <div class= "card-offer-right-date-infos text-center">
                    <div>
                      <b><%= meal.day.strftime('%d/%m/%Y') %></b>
                    </div>
                    <div>
                      RDV à <%= meal.home_hour.strftime('%Hh:%M')%> chez le cuisinier
                    </div>
                  </div>
                <% else %>
                  <%= image_tag 'take.png', class: "card-offer-right-date-img hover", title: "A emporter" %>
                  <div class= "card-offer-right-date-infos text-center">
                    <div>
                     <b><%= meal.day.strftime('%d/%m/%Y') %></b>
                    </div>
                    <div>
                      <%= meal.start_hour.strftime('De %Hh:%M') %> <%= meal.end_hour.strftime('à %Hh:%M')%>
                    </div>
                  </div>
                <% end %>
                </div>
                <div class="card-offer-right-portion">
                  <div class= "card-offer-right-portion-infos text-center">
                    <%= available_portions(meal)%> menus restants
                  </div>
                  <div class= "card-offer-right-portion-infos text-center">
                    <%= booked_portions(meal)%> menu(s) commandé(s)
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="card-offer-list text-center">
              <% meal.orders.each do |order| %>
                <% if order.state == 'paid' %>
                  <%= render "/shared/modale_user", order: order %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="row">
              <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <%= render '/shared/cardmeals', meal: meal %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="profile-meals-expl text-center">
              <h1>Menu tel qu'il apparaît sur Pepeat</h1>
              <h2>Avant de publier le menu, nous allons vérifier que celui ci soit présentable.</h2>
              <div class="profile-meals-expl-body">
                <p><i class="fa fa-camera"></i>Vérification des photos ( taille, netteté)</p>
                <p><i class="fa fa-credit-card"></i> Vérification de la cohérence du prix</p>
                <p><i class="fa fa-file-word-o"></i> Vérification de l'orthographe</p>
              </div>
              <h3>On mange d'abord avec les yeux. N'hésitez pas à prendre du temps pour rendre votre menu le plus attrayant possible.</h3>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>




<script type="text/javascript">
  analytics.identify(<%= current_user.id %>, <%= raw current_user.traits.to_json%>);
</script>




